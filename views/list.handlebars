{{#if success}}
	{{> success}}
{{/if}}
{{#if delete}}
	{{> delete}}
{{/if}}
<div class="row">
	<div class="col-sm-4 text-left">
		<form method="post" action="/new/" >
		  <div class="form-group">
		    <label for="phrase">Sorte do dia</label>
		    <input type="text" class="form-control" id="phrase" name="phrase" placeholder="">
		  </div>
		  <div class="form-group">
		    <label for="image">Url da imagem</label>
		    <input type="text" class="form-control" id="image" name="image" placeholder="">
		  </div>
		  <button type="submit" class="btn btn-success">Cadastrar</button>
		</form>
	</div>
	<div class="col-sm-1"></div>
	<div class="col-sm-7 text-left">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="text-center">Gretchen's cadastradas</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12 text-center">
				<div class="row"> 
				{{#each result}}
					{{>item list=true}}
				{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>